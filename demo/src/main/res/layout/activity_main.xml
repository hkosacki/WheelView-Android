<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context=".MainActivity">

        <com.lantouzi.wheelview.WheelView
            android:id="@+id/wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            app:rulerFont="@font/proxima_nova_regular"
            app:markTextSize="18sp"
            app:markColor="#f45334"
            app:centerMarkTextSize="18sp"
            app:highlightColor="#f45334"
            app:useDefaultSpacing="true" />

        <TextView
            android:id="@+id/changed_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/selected_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center" />

        <com.lantouzi.wheelview.WheelView
            android:id="@+id/wheelview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

    </LinearLayout>
</ScrollView>